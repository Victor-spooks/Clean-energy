<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lista de Produtos</title>
  <link rel="stylesheet" href="/css/listaprodutos.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
</head>
<body>
  <%- include('../partial/header.ejs') %>
  <main>
    <!-- Sidebar -->
    <%- include('../partial/sidebar.ejs') %>

    <!-- Conteúdo -->
    <section class="content">
      
      <!-- Botão voltar -->
      <section class="back-button-container">
        <button class="btn-voltar-plain" onclick="history.back()">
          <i class='bx bx-left-arrow-alt'></i> Voltar
        </button>
      </section>

      <!-- Botão novo produto -->
      <a href="/cadastrar_produto" class="btn btn-success mb-4">Novo Produto</a>

      <!-- Lista de produtos -->
      <section class="produtos-grid">

        <!-- Produto 1 -->
        <article class="produto-card">
          <figure>
            <img src="/imagem/cana.png" alt="Produto">
          </figure>
          <section class="produto-info">
            <h3>Bagaço de Cana</h3>
            <p class="endereco">Rua das Flores, 123 - São Paulo</p>
            <p class="preco">R$ 1500,00</p>
            <p class="quantidade">20 Toneladas</p>
          </section>
          <section class="acoes">
            <button class="btn btn-warning btn-sm">Editar</button>
            <button class="btn btn-info btn-sm">Detalhes</button>
           
           <button class="btn btn-danger btn-sm btn-excluir">Excluir</button>
          </section>
        </article>

        <!-- Exemplo de outro produto -->
        <article class="produto-card">
          <figure>
            <img src="/imagem/serragem.png" alt="Produto">
          </figure>
          <section class="produto-info">
            <h3>Serragem</h3>
            <p class="endereco">Rua das Flores, 123 - São Paulo</p>
            <p class="preco">R$ 250,00</p>
            <p class="quantidade">1 Tonelada</p>
          </section>
          <section class="acoes">
            <button class="btn btn-warning btn-sm">Editar</button>
            <button class="btn btn-info btn-sm">Detalhes</button>
            
            <button class="btn btn-danger btn-sm btn-excluir">Excluir</button>
          </section>
        </article>


        <article class="produto-card">
          <figure>
            <img src="/imagem/palhademilho.png" alt="Produto">
          </figure>
          <section class="produto-info">
            <h3>Palha de Milho</h3>
            <p class="endereco">Rua das Flores, 123 - São Paulo</p>
            <p class="preco">R$ 440,00</p>
            <p class="quantidade">2 Toneladas</p>
          </section>
          <section class="acoes">
            <button class="btn btn-warning btn-sm">Editar</button>
            <button class="btn btn-info btn-sm">Detalhes</button>

            <button class="btn btn-danger btn-sm btn-excluir">Excluir</button>
          </section>
        </article>


        <article class="produto-card">
          <figure>
            <img src="/imagem/cascadearroz.png" alt="Produto">
          </figure>
          <section class="produto-info">
            <h3>Casca de Arroz</h3>
            <p class="endereco">Rua das Flores, 123 - São Paulo</p>
            <p class="preco">R$ 1275,00</p>
            <p class="quantidade">1 Tonelada</p>
          </section>
          <section class="acoes">
            <button class="btn btn-warning btn-sm">Editar</button>
            <button class="btn btn-info btn-sm">Detalhes</button>
          
            <button class="btn btn-danger btn-sm btn-excluir">Excluir</button>
          </section>
        </article>

        <article class="produto-card">
          <figure>
            <img src="/imagem/lixo organico.png" alt="Produto">
          </figure>
          <section class="produto-info">
            <h3>Lixo Orgânico</h3>
            <p class="endereco">Rua das Flores, 123 - São Paulo</p>
            <p class="preco">R$ 900,00</p>
            <p class="quantidade">2 Toneladas</p>
          </section>
          <section class="acoes">
            <button class="btn btn-warning btn-sm">Editar</button>
            <button class="btn btn-info btn-sm">Detalhes</button>
           
           <button class="btn btn-danger btn-sm btn-excluir">Excluir</button>
          </section>
        </article>

        <article class="produto-card">
          <figure>
            <img src="/imagem/pellets.png" alt="Produto">
          </figure>
          <section class="produto-info">
            <h3>Pallets</h3>
            <p class="endereco">Rua das Flores, 123 - São Paulo</p>
            <p class="preco">R$ 2000,00</p>
            <p class="quantidade">2 Toneladas</p>
          </section>
          <section class="acoes">
            <button class="btn btn-warning btn-sm">Editar</button>
            <button class="btn btn-info btn-sm">Detalhes</button>
            
           <button class="btn btn-danger btn-sm btn-excluir">Excluir</button>
          </section>
        </article>

      </section>
    </section>

  </main>

<div class="modal fade" id="excluirModal" tabindex="-1" aria-labelledby="excluirModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="excluirModalLabel">Confirmar Exclusão</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
      </div>
      <div class="modal-body">
        Tem certeza que deseja excluir este produto?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="button" class="btn btn-danger" id="confirmarExcluirBtn">Excluir</button>
      </div>
    </div>
  </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
let cardParaExcluir = null;
const excluirModal = new bootstrap.Modal(document.getElementById('excluirModal'));

document.querySelectorAll('.btn-excluir').forEach(btn => {
  btn.addEventListener('click', function() {
    cardParaExcluir = this.closest('.produto-card');
    excluirModal.show();
  });
});

document.getElementById('confirmarExcluirBtn').addEventListener('click', function() {
  if (cardParaExcluir) {
    cardParaExcluir.remove();
    excluirModal.hide();
    cardParaExcluir = null;
  }
});
</script>
<%- include('../partial/footer.ejs') %>
</body>
</html>