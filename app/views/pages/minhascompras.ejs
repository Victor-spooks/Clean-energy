<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Minhas Compras</title>
  <link rel="stylesheet" href="/css/minhascompras.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
</head>
<body>
  <%- include('../partial/header1.ejs') %>
 

 
 


 <main class="page-layout">

  <%- include('../partial/sidebar.ejs') %>
<section class="content">
      
      <!-- Botão voltar -->
      <section class="back-button-container">
        <button class="btn-voltar-plain" onclick="history.back()">
          <i class='bx bx-left-arrow-alt'></i> Voltar
        </button>
      </section>

     

      <!-- Lista de produtos -->
      <section class="produtos-grid">

        <!-- Produto 1 -->
        <article class="produto-card">
          <figure>
            <img src="/imagem/cana.png" alt="Produto">
          </figure>
          <section class="produto-info">
            <h3>Bagaço de Cana</h3>
            <p class="endereco">Rua das Flores, 123 - São Paulo</p>
            <p class="preco">R$ 1500,00</p>
            <p class="quantidade">1 Tonelada</p>
          </section>
          <section class="acoes">
            <button class="btn btn-warning btn-sm">Rastrear</button>
            <button class="btn btn-info btn-sm">Detalhes</button>
          
            <button class="btn btn-danger btn-sm">Cancelar</button>
          </section>
          <p class="situacao">Em andamento...</p>
        </article>

        <!-- Exemplo de outro produto -->
        <article class="produto-card">
          <figure>
            <img src="/imagem/lenha.png" alt="Produto">
          </figure>
          <section class="produto-info">
            <h3>Lenha Tratada</h3>
            <p class="endereco">Rua Antônio Raposo Tavares, 312 - São Paulo</p>
            <p class="preco">R$ 250,00</p>
            <p class="quantidade">1 Tonelada</p>
          </section>
          <section class="acoes">
            <button class="btn btn-warning btn-sm">Rastrear</button>
            <button class="btn btn-info btn-sm">Detalhes</button>
           
            <button class="btn btn-danger btn-sm">Cancelar</button>
          </section>
          <p class="situacao">Em andamento...</p>
        </article>

        

      </section>
    </section>
</main>


  <%- include('../partial/footer.ejs') %>
</body>
</html>
