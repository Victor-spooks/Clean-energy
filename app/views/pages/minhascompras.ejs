<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Minhas Compras</title>
  <link rel="stylesheet" href="/css/minhascompras.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
  <style>
    /* Estilo do modal de avaliação */
     .avaliacao-estrelas {
    display: flex;
    justify-content: center;
    flex-direction: row-reverse; /* ordem visual corrigida */
    gap: 8px;
    margin-bottom: 10px;
  }

  .avaliacao-estrelas input {
    display: none;
  }

  .avaliacao-estrelas label {
    font-size: 2rem;
    color: #ccc;
    cursor: pointer;
    transition: color 0.2s;
  }

  /* Quando uma estrela for selecionada ou anterior a ela */
  .avaliacao-estrelas input:checked ~ label,
  .avaliacao-estrelas label:hover,
  .avaliacao-estrelas label:hover ~ label {
    color: #FFD700;
  }

  .avaliacao-legendas {
    display: flex;
    justify-content: space-between;
    max-width: 260px;
    margin: 0 auto 10px;
    font-size: 0.9rem;
    color: #555;
  }

  .avaliacao-comentario {
    width: 100%;
    border-radius: 8px;
    border: 1px solid #ccc;
    padding: 8px;
    resize: none;
  }
  </style>
</head>
<body>
  <%- include('../partial/header1.ejs') %>

  <main class="page-layout">
    <%- include('../partial/sidebar.ejs') %>

    <section class="content">
      <nav class="back-navigation" aria-label="Navegação de retorno">
        <button class="back-button" onclick="history.back()" aria-label="Voltar à página anterior">
          <i class='bx bx-arrow-back'></i>
          <span>Voltar</span>
        </button>
      </nav>

      <ul class="nav nav-tabs" id="productTabs" role="tablist">
        <li class="nav-item" role="presentation">
          <a class="nav-link active" id="emAndamentoTab" data-bs-toggle="tab" href="#emAndamento" role="tab" aria-controls="emAndamento" aria-selected="true">Em andamento</a>
        </li>
        <li class="nav-item" role="presentation">
          <a class="nav-link" id="pendentesTab" data-bs-toggle="tab" href="#pendentes" role="tab" aria-controls="pendentes" aria-selected="false">À pagar</a>
        </li>
        <li class="nav-item" role="presentation">
          <a class="nav-link" id="concluidosTab" data-bs-toggle="tab" href="#concluidos" role="tab" aria-controls="concluidos" aria-selected="false">Concluídos</a>
        </li>
      </ul>

      <section class="tab-content" id="productTabsContent">
        <!-- EM ANDAMENTO -->
        <section class="tab-pane fade show active" id="emAndamento" role="tabpanel" aria-labelledby="emAndamentoTab">
          <section class="produtos-grid">
            <article class="produto-card">
              <figure><img src="/imagem/cana.png" alt="Produto"></figure>
              <section class="produto-info">
                <h3>Bagaço de Cana</h3>
                <p class="endereco d-none">Rua das Flores, 123 - São Paulo</p>
                <p class="preco">R$ 1500,00</p>
                <p class="quantidade d-none">1 Tonelada(s)</p>
              </section>
              <section class="acoes">
                <button class="btn btn-warning btn-sm">Rastrear</button>
                <button class="btn btn-info btn-sm btn-detalhes">Detalhes</button>
                <button class="btn btn-danger btn-sm btn-cancelar">Cancelar</button>
              </section>
              <p class="andamento">Em andamento</p>
            </article>

            <article class="produto-card">
              <figure><img src="/imagem/lenha.png" alt="Produto"></figure>
              <section class="produto-info">
                <h3>Lenha Tratada</h3>
                <p class="endereco d-none">Rua Antônio Raposo Tavares, 312 - São Paulo</p>
                <p class="preco">R$ 500,00</p>
                <p class="quantidade d-none">2 Tonelada(s)</p>
              </section>
              <section class="acoes">
                <button class="btn btn-warning btn-sm">Rastrear</button>
                <button class="btn btn-info btn-sm btn-detalhes">Detalhes</button>
                <button class="btn btn-danger btn-sm btn-cancelar">Cancelar</button>
              </section>
              <p class="andamento">Em andamento</p>
            </article>
          </section>
        </section>

        <!-- PENDENTES -->
        <section class="tab-pane fade" id="pendentes" role="tabpanel" aria-labelledby="pendentesTab">
          <section class="produtos-grid">
            <article class="produto-card">
              <figure><img src="/imagem/restodecolheita.png" alt="Produto"></figure>
              <section class="produto-info">
                <h3>Resto de Colheita</h3>
                <p class="endereco d-none">Rua Joaquim dos Santos Andrade, 49 - São Paulo</p>
                <p class="preco">R$ 380,00</p>
                <p class="quantidade d-none">1 Tonelada(s)</p>
              </section>
              <section class="acoes">
                <button class="btn btn-success btn-sm">Efetuar Pagamento</button>
                <button class="btn btn-danger btn-sm btn-cancelar">Cancelar</button>
              </section>
              <p class="pendente">À pagar</p>
            </article>
          </section>
        </section>

        <!-- CONCLUÍDOS -->
        <section class="tab-pane fade" id="concluidos" role="tabpanel" aria-labelledby="concluidosTab">
          <section class="produtos-grid">
            <article class="produto-card">
              <figure><img src="/imagem/folhassecas.png" alt="Produto"></figure>
              <section class="produto-info">
                <h3>Folhas Secas</h3>
                <p class="endereco d-none">Rua do Carmo, 81 - São Paulo</p>
                <p class="preco">R$ 180,00</p>
                <p class="quantidade d-none">1 Tonelada(s)</p>
              </section>
              <section class="acoes">
                <button class="btn btn-success btn-sm btn-avaliar">Avaliar</button>
                <button class="btn btn-info btn-sm btn-detalhes">Detalhes</button>
              </section>
              <p class="concluido">Concluído</p>
            </article>

            <article class="produto-card">
              <figure><img src="/imagem/lixo organico.png" alt="Produto"></figure>
              <section class="produto-info">
                <h3>Lixo Orgânico</h3>
                <p class="endereco d-none">Rua Silveira Martins, 53 - São Paulo</p>
                <p class="preco">R$ 450,00</p>
                <p class="quantidade d-none">1 Tonelada(s)</p>
              </section>
              <section class="acoes">
                <button class="btn btn-success btn-sm btn-avaliar">Avaliar</button>
                <button class="btn btn-info btn-sm btn-detalhes">Detalhes</button>
              </section>
              <p class="concluido">Concluído</p>
            </article>
          </section>
        </section>
      </section>
    </section>
  </main>

  <!-- MODAL PAGAMENTO -->
<section class="modal fade" id="pagamentoModal" tabindex="-1" aria-labelledby="pagamentoModalLabel" aria-hidden="true">
  <section class="modal-dialog modal-dialog-centered">
    <section class="modal-content">
      <header class="modal-header">
        <h5 class="modal-title" id="pagamentoModalLabel">Efetuar Pagamento</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
      </header>
      <section class="modal-body">
        <p><strong>Produto:</strong> <span id="pagamento-produto"></span></p>
        <p><strong>Quantidade:</strong> <span id="pagamento-quantidade"></span></p>
        <p><strong>Valor:</strong> <span id="pagamento-valor"></span></p>

        <hr>

        <p><strong>Forma de pagamento:</strong></p>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="formaPagamento" id="pix" value="Pix" checked>
          <label class="form-check-label" for="pix">Pix</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="formaPagamento" id="cartao" value="Cartão de Crédito">
          <label class="form-check-label" for="cartao">Cartão de Crédito</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="formaPagamento" id="boleto" value="Boleto Bancário">
          <label class="form-check-label" for="boleto">Boleto Bancário</label>
        </div>

        <div id="mensagemPagamentoErro" class="text-danger mt-2" style="display: none;"></div>
      </section>
      <section class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="button" class="btn btn-success" id="confirmarPagamento">Confirmar Pagamento</button>
      </section>
    </section>
  </section>
</section>


  <!-- MODAL DETALHES -->
  <section class="modal fade" id="detalhesModal" tabindex="-1" aria-labelledby="detalhesModalLabel" aria-hidden="true">
    <section class="modal-dialog modal-dialog-centered">
      <section class="modal-content">
        <header class="modal-header">
          <h5 class="modal-title" id="detalhesModalLabel">Detalhes do Produto</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
        </header>
        <section class="modal-body">
          <p><strong>Produto:</strong> <span id="modal-produto"></span></p>
          <p><strong>Endereço:</strong> <span id="modal-endereco"></span></p>
          <p><strong>Preço:</strong> <span id="modal-preco"></span></p>
          <p><strong>Quantidade:</strong> <span id="modal-quantidade"></span></p>
        </section>
        <section class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
        </section>
      </section>
    </section>
  </section>

  <!-- MODAL CANCELAR -->
  <section class="modal fade" id="cancelarModal" tabindex="-1" aria-labelledby="cancelarModalLabel" aria-hidden="true">
    <section class="modal-dialog modal-dialog-centered">
      <section class="modal-content">
        <header class="modal-header">
          <h5 class="modal-title" id="cancelarModalLabel">Confirmar Cancelamento</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
        </header>
        <section class="modal-body">
          <p>Tem certeza que deseja cancelar este pedido?</p>
        </section>
        <section class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Não</button>
          <button type="button" class="btn btn-danger" id="confirmarCancelamento">Sim, cancelar</button>
        </section>
      </section>
    </section>
  </section>

  <!-- MODAL AVALIAÇÃO -->
<section class="modal fade" id="avaliarModal" tabindex="-1" aria-labelledby="avaliarModalLabel" aria-hidden="true">
  <section class="modal-dialog modal-dialog-centered">
    <section class="modal-content">
      <header class="modal-header">
        <h5 class="modal-title" id="avaliarModalLabel">Avaliar Produto</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
      </header>
      <section class="modal-body text-center">
        <form id="formAvaliacao">
          <fieldset class="avaliacao-estrelas">
            <input type="radio" id="estrela5" name="estrela" value="5"><label for="estrela5">&#9733;</label>
            <input type="radio" id="estrela4" name="estrela" value="4"><label for="estrela4">&#9733;</label>
            <input type="radio" id="estrela3" name="estrela" value="3"><label for="estrela3">&#9733;</label>
            <input type="radio" id="estrela2" name="estrela" value="2"><label for="estrela2">&#9733;</label>
            <input type="radio" id="estrela1" name="estrela" value="1"><label for="estrela1">&#9733;</label>
          </fieldset>

          <section class="avaliacao-legendas">
            <span>Péssimo</span>
            <span>Ruim</span>
            <span>Regular</span>
            <span>Bom</span>
            <span>Excelente</span>
          </section>

          <textarea class="avaliacao-comentario" rows="3" placeholder="Escreva seu comentário..."></textarea>
          <div id="mensagemErroAvaliacao" class="text-danger mt-2" style="display: none;"></div>

        </form>
      </section>
      <section class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="button" class="btn btn-success" id="enviarAvaliacao">Enviar Avaliação</button>
      </section>
    </section>
  </section>
</section>
<!-- TOAST DE CONFIRMAÇÃO -->
<section class="position-fixed bottom-0 end-0 p-3" style="z-index: 9999">
  <div id="toastAvaliacao" class="toast align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="d-flex">
      <div class="toast-body">
        ✅ Obrigado por sua avaliação!
      </div>
      <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Fechar"></button>
    </div>
  </div>
</section>



  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    let cardParaCancelar = null;
    const cancelarModal = new bootstrap.Modal(document.getElementById('cancelarModal'));
    const avaliarModal = new bootstrap.Modal(document.getElementById('avaliarModal'));

    // Cancelar
    document.querySelectorAll('.btn-cancelar').forEach(btn => {
      btn.addEventListener('click', function() {
        cardParaCancelar = this.closest('.produto-card');
        cancelarModal.show();
      });
    });

    document.getElementById('confirmarCancelamento').addEventListener('click', function() {
      if (cardParaCancelar) cardParaCancelar.remove();
      cancelarModal.hide();
    });

    // Detalhes
    document.querySelectorAll('.btn-detalhes').forEach(btn => {
      btn.addEventListener('click', function() {
        const card = this.closest('.produto-card');
        document.getElementById('modal-produto').textContent = card.querySelector('h3').textContent;
        document.getElementById('modal-endereco').textContent = card.querySelector('.endereco').textContent;
        document.getElementById('modal-preco').textContent = card.querySelector('.preco').textContent;
        document.getElementById('modal-quantidade').textContent = card.querySelector('.quantidade').textContent;
        new bootstrap.Modal(document.getElementById('detalhesModal')).show();
      });
    });

    const pagamentoModal = new bootstrap.Modal(document.getElementById('pagamentoModal'));
let produtoSelecionadoParaPagamento = null;

document.querySelectorAll('.btn-success').forEach(btn => {
  if (btn.textContent.includes('Efetuar Pagamento')) {
    btn.addEventListener('click', function () {
      const card = this.closest('.produto-card');
      produtoSelecionadoParaPagamento = card;

      document.getElementById('pagamento-produto').textContent = card.querySelector('h3').textContent;
      document.getElementById('pagamento-quantidade').textContent = card.querySelector('.quantidade').textContent;
      document.getElementById('pagamento-valor').textContent = card.querySelector('.preco').textContent;

      pagamentoModal.show();
    });
  }
});


    // Avaliar
    document.querySelectorAll('.btn-avaliar').forEach(btn => {
      btn.addEventListener('click', function() {
        avaliarModal.show();
      });
    });

    document.getElementById('enviarAvaliacao').addEventListener('click', function () {
  const estrelaSelecionada = document.querySelector('input[name="estrela"]:checked');
  const comentario = document.querySelector('.avaliacao-comentario').value.trim();
  const mensagemErro = document.getElementById('mensagemErroAvaliacao');

  // Reset mensagem de erro
  mensagemErro.style.display = 'none';
  mensagemErro.textContent = '';

  // Verificações
  if (!estrelaSelecionada && comentario === '') {
    mensagemErro.textContent = '⚠️ Por favor, selecione uma nota e escreva um comentário.';
    mensagemErro.style.display = 'block';
    return;
  }

  if (!estrelaSelecionada) {
    mensagemErro.textContent = '⚠️ Por favor, selecione uma nota.';
    mensagemErro.style.display = 'block';
    return;
  }

  if (comentario === '') {
    mensagemErro.textContent = '⚠️ Por favor, escreva um comentário.';
    mensagemErro.style.display = 'block';
    return;
  }

  // Tudo ok: enviar avaliação
  avaliarModal.hide();
  document.getElementById('formAvaliacao').reset();
  mensagemErro.style.display = 'none';

  // Mostra o toast de confirmação
  const toast = new bootstrap.Toast(document.getElementById('toastAvaliacao'));
  toast.show();
});



  </script>
</body>
</html>
