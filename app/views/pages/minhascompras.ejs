<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Minhas Compras</title>
  <link rel="stylesheet" href="/css/minhascompras.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
</head>
<body>
  <%- include('../partial/header1.ejs') %>

  <main class="page-layout">
    <%- include('../partial/sidebar.ejs') %>

    <section class="content">
      <!-- Botão voltar -->
      <nav class="back-navigation" aria-label="Navegação de retorno">
        <button class="back-button" onclick="history.back()" aria-label="Voltar à página anterior">
          <i class='bx bx-arrow-back'></i>
          <span>Voltar</span>
        </button>
      </nav>

      <!-- Abas -->
      <ul class="nav nav-tabs" id="productTabs" role="tablist">
        <li class="nav-item" role="presentation">
          <a class="nav-link active" id="emAndamentoTab" data-bs-toggle="tab" href="#emAndamento" role="tab" aria-controls="emAndamento" aria-selected="true">Em andamento</a>
        </li>
        <li class="nav-item" role="presentation">
          <a class="nav-link" id="pendentesTab" data-bs-toggle="tab" href="#pendentes" role="tab" aria-controls="pendentes" aria-selected="false">À pagar</a>
        </li>
        <li class="nav-item" role="presentation">
          <a class="nav-link" id="concluidosTab" data-bs-toggle="tab" href="#concluidos" role="tab" aria-controls="concluidos" aria-selected="false">Concluídos</a>
        </li>
      </ul>

      <!-- Conteúdo das abas -->
      <div class="tab-content" id="productTabsContent">
        <!-- Aba Em andamento -->
        <div class="tab-pane fade show active" id="emAndamento" role="tabpanel" aria-labelledby="emAndamentoTab">
          <section class="produtos-grid">
            <!-- Produto Em andamento 1 -->
            <article class="produto-card">
              <figure>
                <img src="/imagem/cana.png" alt="Produto">
              </figure>
              <section class="produto-info">
                <h3>Bagaço de Cana</h3>
                <p class="endereco d-none">Rua das Flores, 123 - São Paulo</p>
                <p class="preco">R$ 1500,00</p>
                <p class="quantidade d-none">1 Tonelada(s)</p>
              </section>
              <section class="acoes">
                <button class="btn btn-warning btn-sm">Rastrear</button>
                <button class="btn btn-info btn-sm btn-detalhes">Detalhes</button>
                <button class="btn btn-danger btn-sm btn-cancelar">Cancelar</button>
              </section>
              <p class="andamento">Em andamento</p>
            </article>
            <!-- Produto Em andamento 2 -->
            <article class="produto-card">
              <figure>
                <img src="/imagem/lenha.png" alt="Produto">
              </figure>
              <section class="produto-info">
                <h3>Lenha Tratada</h3>
                <p class="endereco d-none">Rua Antônio Raposo Tavares, 312 - São Paulo</p>
                <p class="preco">R$ 500,00</p>
                <p class="quantidade d-none">2 Tonelada(s)</p>
              </section>
              <section class="acoes">
                <button class="btn btn-warning btn-sm">Rastrear</button>
                <button class="btn btn-info btn-sm btn-detalhes">Detalhes</button>
                <button class="btn btn-danger btn-sm btn-cancelar">Cancelar</button>
              </section>
              <p class="andamento">Em andamento</p>
            </article>
          </section>
        </div>

        <!-- Aba Pendentes (À Pagar) -->
        <div class="tab-pane fade" id="pendentes" role="tabpanel" aria-labelledby="pendentesTab">
          <section class="produtos-grid">
            <!-- Produto pendente 1 -->
            <article class="produto-card">
              <figure>
                <img src="/imagem/restodecolheita.png" alt="Produto">
              </figure>
              <section class="produto-info">
                <h3>Resto de Colheita</h3>
                <p class="endereco d-none">Rua Joaquim dos Santos Andrade, 49 - São Paulo</p>
                <p class="preco">R$ 380,00</p>
                <p class="quantidade d-none">1 Tonelada(s)</p>
              </section>
              <section class="acoes">
                <button class="btn btn-success btn-sm">Efetuar Pagamento</button> <!-- Mudei para antes -->
                <button class="btn btn-danger btn-sm btn-cancelar">Cancelar</button>
              </section>
              <p class="pendente">À pagar</p>
            </article>
          </section>
        </div>

        <!-- Aba Concluídos -->
        <div class="tab-pane fade" id="concluidos" role="tabpanel" aria-labelledby="concluidosTab">
          <section class="produtos-grid">
            <!-- Produto concluído 1 -->
            <article class="produto-card">
              <figure>
                <img src="/imagem/folhassecas.png" alt="Produto">
              </figure>
              <section class="produto-info">
                <h3>Folhas Secas</h3>
                <p class="endereco d-none">Rua do Carmo, 81 - São Paulo</p>
                <p class="preco">R$ 180,00</p>
                <p class="quantidade d-none">1 Tonelada(s)</p>
              </section>
              <section class="acoes">
                <button class="btn btn-success btn-sm">Avaliar</button> <!-- Mudei para antes -->
                <button class="btn btn-info btn-sm btn-detalhes">Detalhes</button>
              </section>
              <p class="concluido">Concluído</p>
            </article>
            <!-- Produto concluído 2 -->
            <article class="produto-card">
              <figure>
                <img src="/imagem/lixo organico.png" alt="Produto">
              </figure>
              <section class="produto-info">
                <h3>Lixo Orgânico</h3>
                <p class="endereco d-none">Rua Silveira Martins, 53 - São Paulo</p>
                <p class="preco">R$ 450,00</p>
                <p class="quantidade d-none">1 Tonelada(s)</p>
              </section>
              <section class="acoes">
                <button class="btn btn-success btn-sm">Avaliar</button> <!-- Mudei para antes -->
                <button class="btn btn-info btn-sm btn-detalhes">Detalhes</button>
              </section>
              <p class="concluido">Concluído</p>
            </article>
          </section>
        </div>
      </div>
    </section>
  </main>

  <!-- Modal de Detalhes -->
  <section class="modal fade" id="detalhesModal" tabindex="-1" aria-labelledby="detalhesModalLabel" aria-hidden="true">
    <section class="modal-dialog modal-dialog-centered">
      <section class="modal-content">
        <section class="modal-header">
          <h5 class="modal-title" id="detalhesModalLabel">Detalhes do Produto</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
        </section>
        <section class="modal-body">
          <p><strong>Produto:</strong> <span id="modal-produto"></span></p>
          <p><strong>Endereço:</strong> <span id="modal-endereco"></span></p>
          <p><strong>Preço:</strong> <span id="modal-preco"></span></p>
          <p><strong>Quantidade:</strong> <span id="modal-quantidade"></span></p>
        </section>
        <section class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
        </section>
      </section>
    </section>
  </section

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
  let cardParaCancelar = null;
  const cancelarModal = new bootstrap.Modal(document.getElementById('cancelarModal'));
  
  // Botão Cancelar
  document.querySelectorAll('.btn-cancelar').forEach(btn => {
    btn.addEventListener('click', function() {
      cardParaCancelar = this.closest('.produto-card'); // CORRIGIDO: salva o card
      cancelarModal.show();
    });
  });

  document.getElementById('confirmarCancelarBtn').addEventListener('click', function() {
    if (cardParaCancelar) {
      cardParaCancelar.remove();
      cancelarModal.hide();
      cardParaCancelar = null;
    }
  });

  // Botão Detalhes
  const modal = new bootstrap.Modal(document.getElementById('detalhesModal'));
  document.querySelectorAll('.btn-detalhes').forEach(btn => {
    btn.addEventListener('click', function() {
      const card = this.closest('.produto-card');
      document.getElementById('modal-produto').innerText = card.querySelector('h3').innerText;
      document.getElementById('modal-endereco').innerText = card.querySelector('.endereco').innerText;
      document.getElementById('modal-preco').innerText = card.querySelector('.preco').innerText;
      document.getElementById('modal-quantidade').innerText = card.querySelector('.quantidade').innerText;
      modal.show();
    });
  });


  document.addEventListener('DOMContentLoaded', () => {
  // Função que oculta ou exibe os botões conforme a aba ativa
  function updateButtonsForActiveTab() {
    const activeTabId = document.querySelector('.nav-link.active').id; // Obtém a aba ativa

    // Aba "Em andamento"
    if (activeTabId === 'emAndamentoTab') {
      document.querySelectorAll('.btn-cancelar').forEach(button => {
        button.style.display = ''; // Exibe o botão de cancelar
      });
      document.querySelectorAll('.btn-detalhes').forEach(button => {
        button.style.display = ''; // Exibe o botão de detalhes
      });
      document.querySelectorAll('.btn-success').forEach(button => {
        button.style.display = 'none'; // Esconde o botão de pagamento ou avaliação
      });
    }

    // Aba "À Pagar"
    else if (activeTabId === 'pendentesTab') {
      document.querySelectorAll('.btn-cancelar').forEach(button => {
        button.style.display = ''; // Exibe o botão de cancelar
      });
      document.querySelectorAll('.btn-detalhes').forEach(button => {
        button.style.display = 'none'; // Esconde o botão de detalhes
      });
      document.querySelectorAll('.btn-success').forEach(button => {
        button.style.display = ''; // Exibe o botão de pagamento
      });
    }

    // Aba "Concluídos"
    else if (activeTabId === 'concluidosTab') {
      document.querySelectorAll('.btn-cancelar').forEach(button => {
        button.style.display = 'none'; // Esconde o botão de cancelar
      });
      document.querySelectorAll('.btn-detalhes').forEach(button => {
        button.style.display = ''; // Exibe o botão de detalhes
      });
      document.querySelectorAll('.btn-success').forEach(button => {
        button.style.display = ''; // Exibe o botão de avaliar
      });
    }
  }

  // Atualiza os botões ao carregar a página
  updateButtonsForActiveTab();

  // Adiciona evento para atualizar os botões quando a aba mudar
  document.querySelectorAll('.nav-link').forEach(tab => {
    tab.addEventListener('click', () => {
      setTimeout(() => {
        updateButtonsForActiveTab(); // Atualiza os botões após a troca de aba
      }, 200); // Delay para garantir que a aba foi trocada
    });
  });
});
</script>

<%- include('../partial/footer.ejs') %>
</body>
</html>
