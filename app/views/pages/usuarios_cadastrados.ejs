  const starsDisplay = document.getElementById('starsDisplay');
  const totalRatings = document.getElementById('totalRatings');
  const ratingsContainer = document.getElementById('ratingsContainer');
  
  // Obter dados do usuário
  const userData = ratingsData[userId];
  
  if (!userData) {
    console.error('Dados de avaliação não encontrados para o usuário:', userId);
    return;
  }
  
  // Atualizar título e subtítulo baseado no tipo de usuário
  if (userData.type === 'vendedor') {
    modalTitle.innerHTML = '<i class="bx bxs-star"></i> Avaliações Recebidas';
    modalSubtitle.textContent = `Avaliações que ${userName} recebeu de seus compradores`;
  } else {
    modalTitle.innerHTML = '<i class="bx bxs-star"></i> Avaliações Dadas';
    modalSubtitle.textContent = `Avaliações que ${userName} deu aos vendedores`;
  }
  
  // Atualizar média e total
  if (userData.total > 0) {
    averageRating.textContent = userData.average.toFixed(1);
    starsDisplay.innerHTML = generateStars(userData.average);
    totalRatings.textContent = userData.total;
    
    // Gerar cards de avaliações
    let ratingsHTML = '';
    userData.ratings.forEach(rating => {
      ratingsHTML += `
        <div class="rating-card">
          <div class="rating-card-header">
            <div class="rating-card-info">
